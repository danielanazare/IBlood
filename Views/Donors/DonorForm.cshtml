@model IBlood002.ViewModels.DonorFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@*"Save" is the name of the action called when we POST the form*@

@using (@Html.BeginForm("Save", "Donors"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Donor.FirstName)
        @Html.TextBoxFor(m => m.Donor.FirstName, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Donor.LastName)
        @Html.TextBoxFor(m => m.Donor.LastName, new {@class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Donor.BirthDate)
        @Html.TextBoxFor(m => m.Donor.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Donor.BloodTypeId)
        @Html.DropDownListFor(m => m.Donor.BloodTypeId, new SelectList(Model.BloodTypes, "Id", "BloodTypeName"), "Select blood type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="form-check">
            @Html.CheckBoxFor(m => m.Donor.IsSubscribedToNewsletter, new{@class = "form-check-input" })
            @Html.LabelFor(m => m.Donor.IsSubscribedToNewsletter, new {@class = "form-check-label"})
        </div>
    </div>

    //Hidden fields 
    @Html.HiddenFor(m=> m.Donor.Id)


    <button type="submit" class="btn btn-primary">Save</button>


}

